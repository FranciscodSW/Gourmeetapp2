<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Color cuando el ítem está seleccionado/activado -->
    <item android:color="@color/primary_color" android:state_checked="true"/>
    <!-- Color cuando el ítem está presionado -->
    <item android:color="@color/primary_color" android:state_pressed="true"/>
    <!-- Color cuando el ítem está enfocado -->
    <item android:color="@color/primary_color" android:state_focused="true"/>
    <!-- Color por defecto (no seleccionado) -->
    <item android:color="@color/secondary_text_color"/>
</selector>