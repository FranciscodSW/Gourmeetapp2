<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:padding="16dp"
    android:paddingBottom="200dp"
    android:scrollbars="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- CardView para informaciÃ³n principal de la receta -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:id="@+id/tvRecetaNombre"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Nombre de la Receta"
                    android:fontFamily="@font/caviardreams"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="#333333"
                    android:layout_marginBottom="12dp"/>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:id="@+id/tvTiempo"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="â± 30 min"
                        android:textSize="14sp"
                        android:fontFamily="@font/caviardreams"
                        android:textColor="#4CAF50"
                        android:drawablePadding="4dp"/>

                    <TextView
                        android:id="@+id/tvPorciones"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="ðŸ‘¥ 4 porciones"
                        android:textSize="14sp"
                        android:fontFamily="@font/caviardreams"
                        android:textColor="#2196F3"
                        android:gravity="center"
                        android:drawablePadding="4dp"/>

                    <TextView
                        android:id="@+id/tvDificultad"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="ðŸ“Š Media"
                        android:fontFamily="@font/caviardreams"
                        android:textSize="14sp"
                        android:textColor="#FF9800"
                        android:gravity="end"
                        android:drawablePadding="4dp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:id="@+id/tvCalorias"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="ðŸ”¥ 250 cal"
                        android:fontFamily="@font/caviardreams"
                        android:textSize="14sp"
                        android:textColor="#F44336"
                        android:drawablePadding="4dp"/>

                    <TextView
                        android:id="@+id/tvCategoria"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="ðŸ½ Postres"
                        android:fontFamily="@font/caviardreams"
                        android:textSize="14sp"
                        android:textColor="#9C27B0"
                        android:gravity="end"
                        android:drawablePadding="4dp"/>
                </LinearLayout>

                <!-- Video de YouTube -->

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <!-- CardView para ingredientes -->
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="6dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:cardUseCompatPadding="false">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="ðŸ“ Ingredientes"
                        android:fontFamily="@font/caviardreams"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="#333333"
                        android:layout_marginBottom="16dp"/>
                    <!-- Lista de ingredientes -->
                    <LinearLayout
                        android:id="@+id/containerIngredientes"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginBottom="12dp"
                            android:visibility="gone"
                            >

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="â€¢ 500 gr Mantequilla"
                                android:fontFamily="@font/caviardreams"
                                android:textSize="16sp"
                                android:textColor="#555555"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="717 cal"
                                android:fontFamily="@font/caviardreams"
                                android:textSize="14sp"
                                android:textColor="#F44336"/>
                        </LinearLayout>

                    </LinearLayout>

                    <!-- Totales -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#EEEEEE"
                        android:layout_marginTop="16dp"
                        android:layout_marginBottom="16dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Total calorÃ­as:"
                            android:fontFamily="@font/caviardreams"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="#333333"/>

                        <TextView
                            android:id="@+id/tvTotalCalorias"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1200 cal"
                            android:fontFamily="@font/caviardreams"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="#F44336"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="8dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Costo estimado:"
                            android:fontFamily="@font/caviardreams"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="#333333"/>

                        <TextView
                            android:id="@+id/tvTotalPrecio"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="$45.50"
                            android:fontFamily="@font/caviardreams"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="#4CAF50"/>
                    </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="6dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:cardUseCompatPadding="false">>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="ðŸ“– DescripciÃ³n"
                        android:fontFamily="@font/caviardreams"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="#333333"
                        android:layout_marginBottom="16dp"/>

                    <TextView
                        android:id="@+id/tvRecetaDescripcion"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="AquÃ­ va la explicaciÃ³n detallada de la receta..."
                        android:fontFamily="@font/caviardreams"
                        android:textSize="16sp"
                        android:textColor="#555555"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardPreparacion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackground"
            app:cardCornerRadius="12dp"
            app:cardElevation="6dp"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <!-- Cabecera con tÃ­tulo y contador -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="16dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="ðŸ‘¨â€ðŸ³ PreparaciÃ³n"
                        android:fontFamily="@font/caviardreams"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="#333333"/>

                    <TextView
                        android:id="@+id/tvContadorPasos"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Paso 1/5"
                        android:fontFamily="@font/caviardreams"
                        android:textSize="14sp"
                        android:textColor="#666666"
                        android:background="@drawable/badge_paso"
                        android:paddingHorizontal="12dp"
                        android:paddingVertical="4dp"/>
                </LinearLayout>

                <!-- Instrucciones para deslizar -->
                <TextView
                    android:id="@+id/tvInstrucciones"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="â† Desliza esta tarjeta para cambiar de paso â†’"
                    android:fontFamily="@font/caviardreams"
                    android:textSize="12sp"
                    android:textColor="#666666"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="12dp"/>

                <!-- Ãrea para mostrar el paso actual -->
                <LinearLayout
                    android:id="@+id/containerPasoActual"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/bg_paso"
                    android:padding="20dp">

                    <!-- Barra de progreso -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="16dp"
                        android:layoutDirection="rtl">

                        <View
                            android:id="@+id/progressBarPaso"
                            android:layout_width="0dp"
                            android:layout_height="6dp"
                            android:layout_weight="1"
                            android:background="#E0E0E0"/>

                        <View
                            android:id="@+id/progressBarActual"
                            android:layout_width="0dp"
                            android:layout_height="6dp"
                            android:layout_weight="0.2"
                            android:background="#2196F3"/>
                    </LinearLayout>

                    <!-- DescripciÃ³n del paso -->
                    <TextView
                        android:id="@+id/tvDescripcionPaso"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Mezclar azÃºcar glass con harina, fÃ©cula de maÃ­z y polvo de almendra..."
                        android:fontFamily="@font/caviardreams"
                        android:textSize="16sp"
                        android:textColor="#333333"
                        android:lineSpacingExtra="4dp"/>

                    <!-- Tiempo estimado del paso -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginTop="16dp"
                        android:padding="8dp">

                        <TextView
                            android:id="@+id/tvTiempoPaso"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Tiempo estimado: 10 min"
                            android:fontFamily="@font/caviardreams"
                            android:textSize="14sp"
                            android:textColor="#4CAF50"/>
                    </LinearLayout>
                </LinearLayout>

                <!-- Indicadores de puntos -->
                <LinearLayout
                    android:id="@+id/containerPuntos"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginTop="20dp"
                    android:layout_gravity="center_horizontal"/>

            </LinearLayout>


        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/cardVideo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            android:visibility="gone">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="180dp">

                <!-- ðŸ”¥ Miniatura -->
                <ImageView
                    android:id="@+id/imgPreviewVideo"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"/>

                <!-- ðŸ”¥ Ãcono Play -->
                <ImageView
                    android:id="@+id/imgPlay"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_gravity="center"

                    android:alpha="0.9"/>

            </FrameLayout>

        </androidx.cardview.widget.CardView>


    </LinearLayout>
</ScrollView>