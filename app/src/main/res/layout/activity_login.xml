<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0E90E4"
    android:clipChildren="false"
    android:clipToPadding="false"
    >


    <!-- CONTENIDO PRINCIPAL -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- IMÁGENES de fondo -->
        <ImageView
            android:id="@+id/imgTopLeft"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/ic_platillo_2"
            android:layout_marginTop="24dp"
            android:layout_marginStart="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <ImageView
            android:id="@+id/imgTopRight"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/ic_platillo_3"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <ImageView
            android:id="@+id/imgFondo"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/ic_platillo_1"
            android:layout_marginTop="24dp"
            android:textSize="30sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!-- TEXTO  -->
        <TextView
            android:id="@+id/txtBienvenido"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cocina saludable"
            android:textColor="#F8F8F8"
            android:textSize="22sp"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="50dp"
            android:fontFamily="@font/caviardreams"
            app:layout_constraintTop_toBottomOf="@id/imgFondo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />

        <TextView
            android:id="@+id/txtSubtitulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="¡Con lo que tienes en casa!"
            android:layout_gravity="center_horizontal"
            android:textColor="#070707"
            android:textSize="30sp"
            android:textStyle="bold"
            android:layout_marginTop="12dp"
            android:fontFamily="@font/caviardreams"
            app:layout_constraintTop_toBottomOf="@id/txtBienvenido"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:id="@+id/bottomSheet"
        android:layout_width="match_parent"
        android:layout_height="670dp"
        android:layout_marginTop="40dp"
        android:orientation="vertical"
        android:background="@drawable/bg_card"
        android:clipChildren="false"
        android:clipToPadding="false"

        app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior"
        app:behavior_peekHeight="0dp"
        app:behavior_hideable="false">

        <!-- ✅ CONTENEDOR INTERNO (ESTE ES EL IMPORTANTE) -->
        <LinearLayout
            android:id="@+id/sheetContent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <!-- Imagen -->
            <ImageView
                android:id="@+id/imgTopSheet"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/ic_logo_circular"
                android:scaleType="fitCenter"
                android:elevation="10dp"
                android:translationZ="12dp"
                android:layout_marginTop="-60dp"
                android:layout_gravity="center_horizontal|top" />

            <!-- Título -->
            <TextView
                android:id="@+id/txtTituloSheet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bienvenido"
                android:fontFamily="@font/caviardreams"
                android:layout_gravity="center_horizontal"
                android:textSize="30sp"
                android:textStyle="bold"
                android:layout_marginBottom="5dp" />

            <!-- Usuario -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="202dp"
                android:layout_height="76dp"
                android:hint="Usuario o correo"
                android:fontFamily="@font/caviardreams"
                android:layout_gravity="center_horizontal"
                app:boxStrokeColor="#0E90E4"
                app:boxStrokeWidthFocused="2dp"
                app:hintTextColor="#0E90E4"
                android:layout_marginBottom="5dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="200dp"
                    android:layout_height="50dp"
                    android:inputType="textEmailAddress" />

            </com.google.android.material.textfield.TextInputLayout>

            <!-- Contraseña -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:hint="Contraseña"
                android:fontFamily="@font/caviardreams"
                android:layout_gravity="center_horizontal"
                app:boxStrokeColor="#0E90E4"
                app:boxStrokeWidthFocused="2dp"
                app:hintTextColor="#0E90E4"
                app:endIconMode="password_toggle"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPassword" />

            </com.google.android.material.textfield.TextInputLayout>

            <!-- Botón login -->
            <Button
                android:id="@+id/btnLogin"
                android:text="Acceder"
                android:fontFamily="@font/caviardreams"
                android:textColor="#FFFFFF"
                android:layout_gravity="center_horizontal"
                android:backgroundTint="#0E90E4"
                android:layout_marginTop="16dp"
                android:layout_width="200dp"
                android:layout_height="50dp" />

            <!-- Redes -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:orientation="horizontal"
                android:gravity="center">

                <ImageView
                    android:id="@+id/iconFacebook"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_margin="12dp"
                    android:src="@drawable/ic_facebook" />

                <ImageView
                    android:id="@+id/iconGmail"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_margin="12dp"
                    android:src="@drawable/ic_gmail" />

                <ImageView
                    android:id="@+id/iconTiktok"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_margin="12dp"
                    android:src="@drawable/ic_tiktok" />
            </LinearLayout>

            <!-- Botones -->
            <Button
                android:id="@+id/btnRegistrar"
                android:text="Crea tú cuenta"
                android:fontFamily="@font/caviardreams"
                android:textColor="#FFFFFF"
                android:layout_gravity="center_horizontal"
                android:backgroundTint="#0E90E4"
                android:layout_marginTop="16dp"
                android:layout_width="200dp"
                android:layout_height="50dp" />

            <Button
                android:id="@+id/btnsin_cuenta"
                android:text="Continuar sin cuenta"
                android:fontFamily="@font/caviardreams"
                android:textColor="#FFFFFF"
                android:layout_gravity="center_horizontal"
                android:backgroundTint="#0E90E4"
                android:layout_marginTop="16dp"
                android:layout_width="200dp"
                android:layout_height="50dp" />

            <!-- Imagen inferior -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:orientation="horizontal"
                android:gravity="center">

                <ImageView
                    android:id="@+id/ic_fondo2"
                    android:layout_width="200dp"
                    android:layout_height="100dp"
                    android:layout_margin="11dp"
                    android:src="@drawable/ic_fondo2" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>