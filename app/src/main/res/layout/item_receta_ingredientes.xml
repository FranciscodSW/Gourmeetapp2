<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- CardView para informaciÃ³n principal de la receta -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:id="@+id/tvRecetaNombre"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Nombre de la Receta"
                    android:fontFamily="@font/caviardreams"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="#333333"
                    android:layout_marginBottom="12dp"/>

                <TextView
                    android:id="@+id/tvRecetaDescripcion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="DescripciÃ³n completa de la receta..."
                    android:fontFamily="@font/caviardreams"
                    android:textSize="16sp"
                    android:textColor="#666666"
                    android:layout_marginBottom="16dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:id="@+id/tvTiempo"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="â± 30 min"
                        android:textSize="14sp"
                        android:fontFamily="@font/caviardreams"
                        android:textColor="#4CAF50"
                        android:drawablePadding="4dp"/>

                    <TextView
                        android:id="@+id/tvPorciones"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="ðŸ‘¥ 4 porciones"
                        android:textSize="14sp"
                        android:fontFamily="@font/caviardreams"
                        android:textColor="#2196F3"
                        android:gravity="center"
                        android:drawablePadding="4dp"/>

                    <TextView
                        android:id="@+id/tvDificultad"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="ðŸ“Š Media"
                        android:fontFamily="@font/caviardreams"
                        android:textSize="14sp"
                        android:textColor="#FF9800"
                        android:gravity="end"
                        android:drawablePadding="4dp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:id="@+id/tvCalorias"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="ðŸ”¥ 250 cal"
                        android:fontFamily="@font/caviardreams"
                        android:textSize="14sp"
                        android:textColor="#F44336"
                        android:drawablePadding="4dp"/>

                    <TextView
                        android:id="@+id/tvCategoria"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="ðŸ½ Postres"
                        android:fontFamily="@font/caviardreams"
                        android:textSize="14sp"
                        android:textColor="#9C27B0"
                        android:gravity="end"
                        android:drawablePadding="4dp"/>
                </LinearLayout>

                <!-- Video de YouTube -->
                <LinearLayout
                    android:id="@+id/layoutVideo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:visibility="gone"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@android:drawable/ic_media_play"
                        android:tint="#FF0000"/>

                    <TextView
                        android:id="@+id/tvVideo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ver video en YouTube"
                        android:fontFamily="@font/caviardreams"
                        android:textSize="14sp"
                        android:textColor="#FF0000"
                        android:layout_marginStart="8dp"
                        android:clickable="true"
                        android:focusable="true"/>
                </LinearLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- CardView para ingredientes -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ðŸ“ Ingredientes"
                    android:fontFamily="@font/caviardreams"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="#333333"
                    android:layout_marginBottom="16dp"/>

                <!-- Lista de ingredientes -->
                <LinearLayout
                    android:id="@+id/containerIngredientes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- Los ingredientes se agregarÃ¡n dinÃ¡micamente aquÃ­ -->
                    <!-- Ejemplo de un ingrediente:
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="12dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="â€¢ 500 gr Mantequilla"
                            android:fontFamily="@font/caviardreams"
                            android:textSize="16sp"
                            android:textColor="#555555"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="717 cal"
                            android:fontFamily="@font/caviardreams"
                            android:textSize="14sp"
                            android:textColor="#F44336"/>
                    </LinearLayout>
                    -->
                </LinearLayout>

                <!-- Totales -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#EEEEEE"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="16dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Total calorÃ­as:"
                        android:fontFamily="@font/caviardreams"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#333333"/>

                    <TextView
                        android:id="@+id/tvTotalCalorias"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1200 cal"
                        android:fontFamily="@font/caviardreams"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#F44336"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Costo estimado:"
                        android:fontFamily="@font/caviardreams"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#333333"/>

                    <TextView
                        android:id="@+id/tvTotalPrecio"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="$45.50"
                        android:fontFamily="@font/caviardreams"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#4CAF50"/>
                </LinearLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</ScrollView>