<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginBottom="10dp">

    <!-- ðŸ”¥ Usuario -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/imgUserRespuesta"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_user"
            android:layout_marginEnd="8dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvNombreUsuarioRespuesta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Usuario"
                android:textSize="13sp"
                android:textStyle="bold"
                android:textColor="#333333"
                android:fontFamily="@font/caviardreams"/>

            <TextView
                android:id="@+id/tvFechaRespuesta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hace 2 dÃ­as"
                android:textSize="11sp"
                android:textColor="#888888"
                android:fontFamily="@font/caviardreams"/>

        </LinearLayout>

    </LinearLayout>

    <!-- ðŸ”¥ Texto respuesta -->
    <TextView
        android:id="@+id/tvTextoRespuesta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Totalmente de acuerdo contigo ðŸ‘"
        android:textSize="14sp"
        android:textColor="#555555"
        android:fontFamily="@font/caviardreams"
        android:layout_marginTop="4dp"
        android:layout_marginStart="40dp"/>

    <!-- ðŸ”¥ Botones -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="6dp"
        android:layout_marginStart="40dp">

        <ImageView
            android:id="@+id/btnLikeRespuesta"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:src="@drawable/ic_like"
            android:layout_marginEnd="14dp"/>

        <ImageView
            android:id="@+id/btnDislikeRespuesta"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:src="@drawable/ic_dislike"
            android:layout_marginEnd="14dp"/>

        <ImageView
            android:id="@+id/btnReportarRespuesta"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_warning"/>

    </LinearLayout>

</LinearLayout>