<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/tvRecetaNombre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nombre Receta"
            android:fontFamily="@font/caviardreams"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/tvRecetaDescripcion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="DescripciÃ³n..."
            android:fontFamily="@font/caviardreams"
            android:textSize="14sp"
            android:textColor="#666666"
            android:maxLines="2"
            android:ellipsize="end"
            android:layout_marginBottom="12dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="4dp">

            <TextView
                android:id="@+id/tvTiempo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="30 min"
                android:textSize="12sp"
                android:fontFamily="@font/caviardreams"
                android:textColor="#4CAF50"/>

            <TextView
                android:id="@+id/tvPorciones"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="4 porciones"
                android:textSize="12sp"
                android:fontFamily="@font/caviardreams"
                android:textColor="#2196F3"
                android:gravity="center"/>

            <TextView
                android:id="@+id/tvDificultad"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Media"
                android:fontFamily="@font/caviardreams"
                android:textSize="12sp"
                android:textColor="#FF9800"
                android:gravity="end"/>
        </LinearLayout>

        <TextView
            android:id="@+id/tvCalorias"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="250 cal"
            android:fontFamily="@font/caviardreams"
            android:textSize="12sp"
            android:textColor="#F44336"
            android:gravity="end"/>

    </LinearLayout>
</androidx.cardview.widget.CardView>