<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    tools:context=".Menu_principal_free">

    <!-- Fondo dinámico que cambiará de color -->
    <View
        android:id="@+id/fondoDinamico"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="#4CAF50"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/viewPagerCarrusel"
        android:layout_marginBottom="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>


    <!-- TextView para mostrar la opción seleccionada -->



    <!-- ViewPager2 para el carrusel -->
    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/viewPagerCarrusel"
        android:layout_width="0dp"
        android:layout_height="125dp"
        android:elevation="12dp"
        android:layout_marginTop="-120dp"
        android:clipToPadding="false"
        android:paddingStart="40dp"
        android:paddingEnd="40dp"
        app:layout_constraintTop_toBottomOf="@id/fondoDinamico"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>



    <!-- Indicador de puntos (dots) -->
    <com.tbuonomo.viewpagerdotsindicator.WormDotsIndicator
        android:id="@+id/dotsIndicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/viewPagerCarrusel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"
        app:dotsColor="#CCFFFFFF"
        app:dotsStrokeColor="#FFFFFF"
        app:dotsStrokeWidth="2dp"
        app:dotsSize="12dp"
        app:dotsSpacing="8dp"/>

    <!-- Guideline para separar áreas -->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline40"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="293dp" />

    <!-- Contenedor para los detalles de la opción seleccionada -->
    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/dotsIndicator"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="30dp"
        android:padding="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <!-- Aquí podrías agregar detalles específicos de cada opción -->
            <TextView
                android:id="@+id/txtDescripcion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Elementos"
                android:textSize="16sp"
                android:textColor="#333333"
                android:gravity="center"
                android:lineSpacingExtra="4sp"
                android:layout_marginBottom="30dp"/>

            <!-- Grid para mostrar items de la categoría seleccionada -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerItems"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:visibility="gone"/>

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>