<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    tools:context=".Menu_principal_free">

    <!-- Contenedor principal para el contenido -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/content_container"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/bottom_navigation"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <View
            android:id="@+id/fondoDinamico"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="#FAFAFA"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/viewPagerCarrusel"
            android:layout_marginBottom="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!-- ViewPager2 para el carrusel -->
        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/viewPagerCarrusel"
            android:layout_width="0dp"
            android:layout_height="125dp"
            android:elevation="12dp"
            android:layout_marginTop="-120dp"
            android:clipToPadding="false"
            android:paddingStart="40dp"
            android:paddingEnd="40dp"
            app:layout_constraintTop_toBottomOf="@id/fondoDinamico"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!-- Contenedor principal con scroll -->
        <ScrollView
            android:id="@+id/mainScrollView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="3dp"
            android:padding="2dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/viewPagerCarrusel"
            app:layout_constraintVertical_bias="1.0">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <!-- Texto descriptivo -->
                <TextView
                    android:id="@+id/txtDescripcion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/caviardreams"
                    android:gravity="center"
                    android:lineSpacingExtra="4sp"
                    android:text="Elementos"
                    android:textColor="#333333"
                    android:textSize="16sp"
                    android:layout_marginTop="8dp" />

                <!-- Cuadro de búsqueda -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardSearch"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="16dp"
                    app:cardCornerRadius="28dp"
                    app:cardElevation="4dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:paddingHorizontal="16dp"
                        android:gravity="center_vertical">

                        <!-- Icono de búsqueda -->
                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_marginEnd="12dp"
                            android:src="@drawable/ic_lupa" />

                        <!-- Campo de búsqueda -->
                        <com.google.android.material.textfield.MaterialAutoCompleteTextView
                            android:id="@+id/editTextSearch"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Buscar ingrediente"
                            android:inputType="text"
                            android:padding="12dp"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Contenedor ingredientes seleccionados -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardIngredientesSeleccionados"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginTop="12dp"
                    android:visibility="gone"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="4dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="12dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Ingredientes a utilizar"
                            android:textStyle="bold"
                            android:textSize="14sp"
                            android:textColor="#333333" />

                        <com.google.android.material.chip.ChipGroup
                            android:id="@+id/chipGroupIngredientes"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            app:singleLine="false"
                            app:chipSpacing="8dp" />

                        <Button
                            android:id="@+id/btnBuscarPorIngredientes"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:text="Buscar recetas"
                            android:backgroundTint="#4CAF50"
                            android:textColor="@android:color/white"/>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- RecyclerView para mostrar las recetas -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerItems"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/caviardreams"
                    android:layout_marginTop="20dp"
                    android:visibility="visible" />
            </LinearLayout>
        </ScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- CONTENEDOR PARA BÚSQUEDA DE INGREDIENTES (OCULTO INICIALMENTE) -->
    <LinearLayout
        android:id="@+id/containerIngredientes"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/bg_post_it"
        android:paddingTop="6dp"
        android:paddingBottom="32dp"
        android:paddingStart="24dp"
        android:paddingEnd="0dp"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@+id/bottom_navigation"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <!--android:visibility="gone"-->

        <!-- Barra de búsqueda FIJA en la parte SUPERIOR (encima de los ingredientes) -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardSearchBottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="24dp"
            android:layout_marginTop="24dp"
            app:cardCornerRadius="28dp"
            app:cardElevation="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingHorizontal="0dp"
                android:paddingVertical="8dp"
                android:gravity="center_vertical">

                <!-- Icono de búsqueda -->
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginEnd="12dp"
                    android:src="@drawable/ic_lupa" />

                <!-- Campo de búsqueda -->
                <com.google.android.material.textfield.MaterialAutoCompleteTextView
                    android:id="@+id/editTextSearchBottom"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="Buscar ingredientes..."
                    android:inputType="text"
                    android:padding="12dp"
                    android:imeOptions="actionSearch"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Contenedor scrollable para ingredientes seleccionados (DEBAJO del buscador) -->
        <androidx.core.widget.NestedScrollView
            android:id="@+id/scrollIngredientes"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:fillViewport="true"
            android:layout_marginTop="8dp"
            android:padding="0dp">   <!-- Elimina el padding aquí -->

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/chipGroupIngredientesBottom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                app:singleLine="false"
                app:chipSpacing="12dp"
                android:minHeight="100dp"/>

        </androidx.core.widget.NestedScrollView>

    </LinearLayout>
    <!-- Bottom Navigation View -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="0dp"
        android:layout_height="75dp"
        android:background="@android:color/white"
        android:elevation="20dp"
        app:elevation="20dp"
        app:menu="@menu/menu_bottom_nav"
        app:itemIconTint="@color/bottom_nav_color"
        app:itemTextColor="@color/bottom_nav_color"
        app:labelVisibilityMode="labeled"
        style="@style/BottomNavigationTheme"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>